{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "importOrder": [
    "^react$",
    "^reflect-metadata$",
    "<THIRD_PARTY_MODULES>",
    "^@c/(.*)$",
    "^@packages/(.*)$",
    "^@core/(.*)$",
    "^@api/(.*)$",
    "^@/(.*)$",
    "^@m/(.*)$",
    "^[./]"
  ],
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "**/*.ts",
      "options": {
        "importOrderParserPlugins": [
          "typescript",
          "decorators-legacy"
        ]
      }
    }
  ],
  "importOrderSeparation": true
}